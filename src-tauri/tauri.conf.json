{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mdme",
  "version": "../package.json",
  "identifier": "top.litingyes.mdme",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:7000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist/client"
  },
  "app": {
    "windows": [
      {
        "label": "editor",
        "title": "Mdme",
        "width": 800,
        "height": 600,
        "url": "/"
      },
      {
        "label": "settings",
        "title": "Settings",
        "width": 800,
        "height": 600,
        "url": "/settings",
        "create": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.ico"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
